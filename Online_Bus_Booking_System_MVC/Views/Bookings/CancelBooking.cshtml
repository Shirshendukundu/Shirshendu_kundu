@model Online_Bus_Booking_System_DAO.Booking
@{
    ViewData["Title"] = "Cancel Booking";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(to right, #ff6b6b, #f6d365);
            color: white;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Arial', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            background: rgba(0, 0, 0, 0.85);
            color: white;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.6);
        }

        .card-header {
            background: #dc3545;
            color: white;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            text-align: center;
            padding: 20px 0;
            font-size: 1.5em;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
            padding: 10px 20px;
            font-size: 1.1em;
            transition: transform 0.3s;
        }

            .btn-danger:hover {
                background-color: #c82333;
                transform: scale(1.05);
            }

        .btn-secondary {
            margin-top: 10px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        dl.row {
            margin-top: 20px;
        }

        dt {
            font-weight: bold;
        }

        hr {
            border-top: 1px solid #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3>@ViewData["Title"]</h3>
                    </div>
                    <div class="card-body">
                        <h3>Are you sure you want to cancel this transaction?</h3>
                        <h4>Booking Details</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.BookingId)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.BookingId)</dd>
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.RefNo)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.RefNo)</dd>
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.PassengerName)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.PassengerName)</dd>
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Quantity)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.Quantity)</dd>
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Amount)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.Amount)</dd>
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>
                        </dl>
                        <form asp-action="CancelBooking">
                            <div class="form-group">
                                <input type="hidden" asp-for="BookingId" />
                                <input type="submit" value="Cancel" class="btn btn-danger" />
                                <a asp-action="Default" class="btn btn-secondary">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
