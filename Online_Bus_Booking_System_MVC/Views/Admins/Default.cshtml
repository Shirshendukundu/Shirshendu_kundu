@model IEnumerable<Online_Bus_Booking_System_DAO.Admin>
@{
    ViewData["Title"] = "Admin List";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {

            background: linear-gradient(to right, #4facfe, #00f2fe);
            color: white;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Arial', sans-serif;
            overflow: hidden;
        }

        .container {
            margin-top: 50px;
            max-width: 1200px;
            background: rgba(0, 0, 0, 0.75);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
            animation: fadeIn 1.5s ease-in-out;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #ffd700;
        }

        .btn-primary, .btn-danger {
            border-radius: 25px;
            font-size: 1.1em;
            transition: transform 0.3s;
        }

            .btn-primary:hover, .btn-danger:hover {
                transform: scale(1.1);
            }

        .table {
            background-color: rgba(255, 255, 255, 0.9);
            color: #333;
            border-radius: 10px;
            overflow: hidden;
        }

            .table th, .table td {
                padding: 15px;
            }

            .table th {
                background: linear-gradient(90deg, rgba(255, 84, 0, 1), rgba(255, 144, 0, 1));
                color: white;
            }

        .pagination {
            justify-content: center;
            margin-top: 20px;
        }

        .alert {
            animation: slideIn 1s ease-in-out;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Admin List</h1>
        <div class="alert alert-success" role="alert" style="display:none;">Data successfully saved</div>
        <div class="d-flex justify-content-between mb-3">
            <div>
                <label>
                    Show
                    <select class="custom-select custom-select-sm form-control form-control-sm" style="width: auto;">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select> entries
                </label>
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Admin ID</th>
                    <th>Admin Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Date of Birth</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>#</td>
                        <td>@Html.DisplayFor(modelItem => item.AdminId)</td>
                        <td>@Html.DisplayFor(modelItem => item.AdminName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                        <td>
                            <a asp-action="EditAdmin" asp-route-id="@item.AdminId" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="RemoveAdmin" asp-route-id="@item.AdminId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-between">
            <div>Showing 1 to 3 of 3 entries</div>
            <div>
                <nav>
                    <ul class="pagination pagination-sm">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="CreateAdmin" class="btn btn-primary">Add New Admin</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-danger btn-sm">Back to Home</a>
        </div>
    </div>
</body>
</html>
