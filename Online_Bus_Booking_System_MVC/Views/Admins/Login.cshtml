@model Online_Bus_Booking_System_DAO.Admin

@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('https://th.bing.com/th/id/OIP.i7kV1SmcwTQKgt__x44AiAHaEK?w=321&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7');
            background-size: cover;
            background-position: center;
            color: white;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .container {
            margin-top: 50px;
            max-width: 600px;
            animation: fadeIn 1.5s ease-in-out;
        }
        .card {
            background: rgba(0, 0, 0, 0.7);
            color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
            animation: float 3s ease-in-out infinite;
        }

        .card-header {
            background: linear-gradient(90deg, rgba(255, 64, 64, 1), rgba(255, 128, 0, 1));
            color: white;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }
        .card-body {
            padding: 2rem;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 25px;
            font-size: 1.1em;
            transition: transform 0.3s;
        }
        .btn-primary:hover {
            transform: scale(1.1);
            background-color: #0056b3;
        }
        .btn-success {
            margin-top: 10px;
            border-radius: 25px;
            font-size: 1.1em;
        }
        .input-group-append button {
            border-radius: 0 25px 25px 0;
            font-size: 1.1em;
        }
        .form-group label {
            font-weight: bold;
        }
        .text-danger {
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>@ViewData["Title"]</h3>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Login", "Admins", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.AdminName)
                                @Html.TextBoxFor(m => m.AdminName, new { @class = "form-control", id = "Admin Name" })
                                @Html.ValidationMessageFor(m => m.AdminName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password)
                                <div class="input-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "Password" })
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
                                            <i class="fas fa-eye" id="toggleIcon"></i>
                                        </button>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        }
                        <div class="text-center mt-3">
                            <a asp-action="CreateAdmin" class="text-danger">New Admin</a> |
                            <a asp-controller="Home" asp-action="Default" class="text-danger">Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
    <script>
        function togglePassword() {
            var passwordField = document.getElementById('Password');
            var toggleIcon = document.getElementById('toggleIcon');
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            $(document).ready(function () {
                $('#loginForm').on('submit', function (event) {
                    var isValid = true;
                    $('.text-danger').text(''); // Clear previous error messages
                    // Validate AdminName
                    var adminName = $('#AdminName').val();
                    if (!adminName) {
                        isValid = false;
                        $('span[data-valmsg-for="AdminName"]').text('Admin name is required.');
                    }
                    // Validate Password
                    var password = $('#Password').val();
                    if (!password) {
                        isValid = false;
                        $('span[data-valmsg-for="Password"]').text('Password is required.');
                    }
                    if (!isValid) {
                        event.preventDefault(); // Prevent form submission if not valid
                    }
                });
            });
        </script>
    }
</body>
</html>
