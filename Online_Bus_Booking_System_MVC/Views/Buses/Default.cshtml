@model IEnumerable<Online_Bus_Booking_System_DAO.Bus>

@{
    ViewData["Title"] = "Bus List";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('https://th.bing.com/th/id/OIP.cxkEDjxyeBwHEKrPwvcszQHaEK?w=297&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7');
            background-size: cover;
            background-position: center;
            color: white;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            max-width: 1500px;
            background-color: mediumaquamarine;
        }

        .card {
            margin-top: 20px;
            color: #333;
            border-radius: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .container-create {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container mt-5 ">
        <h1>Bus List</h1>
        <div class="alert alert-success" role="alert" style="display:none;">Data successfully saved</div>
        <div class="d-flex justify-content-between mb-3">
            <div>
                <label>
                    Show
                    <select class="custom-select custom-select-sm form-control form-control-sm" style="width: auto;">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select> entries
                </label>
            </div>
           
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Bus ID</th>
                    <th>Bus Number</th>
                    <th>Bus Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>#</td>
                        <td>@Html.DisplayFor(modelItem => item.BusId)</td>
                        <td>@Html.DisplayFor(modelItem => item.BusNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.BusName)</td>
                        <td>
                            <a asp-action="EditBus" asp-route-id="@item.BusId" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="RemoveBus" asp-route-id="@item.BusId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="d-flex justify-content-between">
            <div>Showing 1 to 3 of 3 entries</div>
            <div>
                <nav>
                    <ul class="pagination pagination-sm">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <a asp-action="CreateBus" class="btn btn-primary">Add New Bus</a>
        <a asp-controller="Home" asp-action="User" class="btn btn-danger btn-sm">Back to Home</a>
    </div>
</body>
</html>